<% if flash[:notice] %>
<% flash[:notice].each do |notice| %>
    <p><%= notice %></p>
<% end %>
<% end %>

<h1>Create New Blogger</h1>

<%= form_for @blogger do |f| %>
<%= f.label :name %>
<%= f.text_field :name %><br>

<%= f.label :bio %>
<%= f.text_field :bio %><br>

<%= f.label :age %>
<%= f.number_field :age %><br>

<%= f.submit %>
<%end%>